<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE com.infopublic.mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<com.infopublic.mapper namespace="InfoMAreaMapper">
	
	<!-- 字段 -->
	<sql id="Field">
		aid,
		parentaid,
		aname,
		note
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{aid},
		#{parentaid},
		#{aname},
		#{note}
	</sql>
	
	<!--表名 -->
	<sql id="tableName">
		area
	</sql>
	
	<!--通过ID获取区域 -->
	<select id="getAreaByAid" parameterType="String" resultType="Area">
		select  
			a1.aid as aid,
			a1.parentaid as parentaid,
			a1.aname as aname,
			a1.note as note,
			a2.aname as parentaname
		from 
			<include refid="tableName"></include> a1 left join <include refid="tableName"></include> a2 on a1.parentaid=a2.aid
		where a1.aid = #{aid} 
	</select>
	<!--通过ID获取其子一级区域 -->
	<select id="listSubAreaByParentAid" parameterType="String" resultType="Area">
		select  
			a1.aid as aid,
			a1.parentaid as parentaid,
			a1.aname as aname,
			a1.note as note,
			a2.aname as parentaname
		from 
			<include refid="tableName"></include> a1 left join <include refid="tableName"></include> a2 on a1.parentaid=a2.aid
		where a1.parentaid = #{parentaid} order by (a1.aid+0) 
	</select>
	<!--查询所有区域列表 -->
	<select id="listAllArea" parameterType="String" resultType="Area">
		select  
			<include refid="Field"></include>
		from 
			<include refid="tableName"></include>
	</select>
</com.infopublic.mapper>
